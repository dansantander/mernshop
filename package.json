  "bugs": {
    "url": "https://github.com/dansantander/mernshop/issues"
  },
  "homepage": "https://github.com/dansantander/mernshop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.14"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
  }
}
